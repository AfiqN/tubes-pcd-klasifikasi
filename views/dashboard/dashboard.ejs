<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Detection Engine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="/styles/pages-style/dashboard.css">
   
</head>
<body>
    <div class="container">
        <h1>Klasifikasi Gambar</h1>
        <!-- <img id="iadwmagePreview" src="../../uploads/1734788440099-kepiting.jpg" alt="Preview Gambar ss" style="margin-bottom: 20px;"> -->
        <form id="imageForm" enctype="multipart/form-data" action="/submit", method="post">
            <!-- Preview Gambar -->
            <% if (uploadedFileName != undefined) { %>
                <div id="previewContainer">
                    <img id="imagePreview" src="../../uploads/<%= uploadedFileName %>" alt="Preview Gambar" style="display: block; margin-bottom: 20px;">
                </div>
            <% } else { %>    
                <div id="previewContainer">
                    <img id="imagePreview" alt="Preview Gambar" style="display: none; margin-bottom: 20px;">
                </div>
            <% } %>
            <!-- Input Gambar -->
            <div class="input-group">
                <label for="imageInput" class="custom-file-label">
                    <span id="fileName">Upload Gambar</span>
                    <input type="file" id="imageInput" accept="image/*" name="imageInput" required>
                </label>
            </div>
            <!-- Tombol -->
            <div class="button-group">
                <button type="reset" id="resetButton">Reset</button>
                <button type="submit" id="classifyButton">Klasifikasi</button>
            </div>
        </form>
        <!-- Hasil Klasifikasi -->
        <div id="result" style="display: none;">
            <h4>Hasil Klasifikasi</h4>
            <p id="classificationResult">...</p>
        </div>
    </div>
   
    <script>
        const imageInput = document.getElementById('imageInput');
        const fileName = document.getElementById('fileName');
        const imagePreview = document.getElementById('imagePreview');
        const resetButton = document.getElementById('resetButton');

        // Menampilkan nama file dan preview gambar
        imageInput.addEventListener('change', function () {
            const file = this.files[0]; // Ambil file yang dipilih
            if (file) {
                // Menampilkan nama file
                fileName.textContent = file.name;

                // Menampilkan preview gambar
                const reader = new FileReader(); // Membuat FileReader untuk membaca file
                reader.onload = function (e) {
                    imagePreview.src = e.target.result; // Menetapkan sumber gambar
                    imagePreview.style.display = 'block'; // Menampilkan elemen <img>
                };
                reader.readAsDataURL(file); // Membaca file sebagai URL data
            }
        });
        
        // Fungsi untuk mereset form
        resetButton.addEventListener('click', function () {
            imageInput.value = ''; // Mengosongkan input file
            fileName.textContent = 'Upload Gambar'; // Mengatur ulang teks tombol
            imagePreview.style.display = 'none'; // Menyembunyikan pratinjau gambar
            imagePreview.src = ''; // Menghapus sumber gambar
        });
    </script>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXg" crossorigin="anonymous"></script>
</html>
