<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="/styles/pages-style/dashboard.css">
</head>
<body class="container">
    <div class="form-floating list-url-form mt-5">
        <form id="urlForm" method="post" action="/submit">
            <h5>Input list url</h5>
            <textarea class="form-control" name="listUrl" placeholder="" id="input-list-url" style="height: 100px"></textarea>
            
            <h5 class="mt-4">Input list yang tidak ada di DB</h5>
            <textarea class="form-control" name="listDb" placeholder="" id="input-list-db" style="height: 100px"></textarea>
    
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>

    <div class="mt-5">
        <h5>Website Analysis Results</h5>
        <div class="row">
            <% results.forEach(function(result) { %>  
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <a href="https://<%= result.url %>" class="link-dark link-underline-opacity-0" target="_blank">
                                    <p><%= result.url %></p>
                                </a>
                                <p class="ms-2">
                                    <% if (result.hasNegativeContent) { %>
                                        <span class="text-danger">(Perjudian)</span>
                                    <% } else if (result.error) { %>
                                        <span class="text-warning">(Error)</span>
                                    <% } else { %>
                                        <span class="text-success">(Normal)</span>
                                    <% } %>
                                </p>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton<%= result.url %>" data-bs-toggle="dropdown" aria-expanded="false">
                                    Details
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= result.url %>">
                                    <% if (result.hasOwnProperty('judi')) { %>
                                        <% for (const keyword in result) { %>
                                            <% if (keyword !== 'url' && keyword !== 'hasNegativeContent') { %>
                                                <li><%= keyword %>: <%= result[keyword] %></li>
                                            <% } %>
                                        <% } %>
                                    <% } else { %>
                                        <li>No keyword counts available.</li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% if (result.url != result.redirect && !result.error) { %>
                    <div class="card-body">
                        <p class="text-danger">Redirect: <a href="https://<%= result.redirect %>" class="link-dark link-underline-opacity-0" target="_blank" class=""><%= result.redirect %></a> </p>
                    </div>
                    <% } %>
                </div>
            </div>
            <% }); %>  
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="/script/dashboard.js"></script>

</html>