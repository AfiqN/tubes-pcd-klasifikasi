<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Detection Engine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="/styles/pages-style/dashboard.css">
</head>
<body>
    <div class="top-border"></div>
    <div class="container">        
        <div class="form-container d-flex flex-column justify-content-center align-items-center">
            <!-- Logo Group -->
            <div class="logo-group d-flex justify-content-center mb-4">
                <img src="/media/component/logo_kominfo.svg" alt="Logo 1" class="mx-2" style="max-width: 200px;">
                <img src="/media/component/logo_ais.svg" alt="Logo 2" class="mx-2" style="max-width: 200px;">
                <img src="/media/component/logo_aduan.svg" alt="Logo 3" class="mx-2" style="max-width: 200px;">
            </div>

            <div class="text-center my-4">
                <button type="button" class="btn-popup" data-bs-toggle="modal" data-bs-target="#formModal">
                    Input Data...
                </button>
            </div>
            <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="formModalLabel">Cari Data</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="urlForm" method="post" action="/submit" class="d-flex flex-column">                            
                                
                                <div class="d-flex">
                                    <div class="flex-fill me-2 ">
                                        <label for="input-list-url" class="form-label">Input List URL</label>
                                        <textarea class="form-control" name="listUrl" id="input-list-url"></textarea>
                                    </div>
                                    <div class="flex-fill">
                                        <label for="input-list-db" class="form-label">Input List yang Tidak Ada di DB</label>
                                        <textarea class="form-control" name="listDb" id="input-list-db" ></textarea>
                                    </div>
                                </div>
                                
                                <div class="submit-btn-container text-center mt-3">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="loader" class="loader"></div>

        <div class="mt-5">
            <div class="result-header"> 
                <h5 class="header-title">Website Analysis Results</h5>              
                <div class="export-btn-container">
                    <button id="exportButton" class="btn-export" onclick="exportResults()">Export</button>
                </div>
            </div>
        
            <div id="results" class="row">
                <% results.forEach(function(result, index) { %>  
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <a href="https://<%= result.url %>" class="link-dark link-underline-opacity-0" target="_blank">
                                        <p><%= result.url %></p>
                                    </a>
                                    <p class="ms-2">
                                        <% if (result.hasPornoContent) { %>
                                            <span class="text-danger">(Pornografi)</span>
                                        <% } else if (result.hasNegativeContent) { %>
                                            <span class="text-danger">(Perjudian)</span>
                                        <% } else if (result.error) { %>
                                            <span class="text-warning">(Error)</span>
                                        <% } else { %>
                                            <span class="text-success">(Normal)</span>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton<%= index %>" data-bs-toggle="dropdown" aria-expanded="false">
                                        Details
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= index %>">
                                        <% if (!result.error) { %>
                                            <% 
                                                let hasKeywords = false;
                                                Object.entries(result.keywordCounts).forEach(([keyword, count]) => {
                                                    if (count > 0) {
                                                        hasKeywords = true;
                                                    }
                                                });
                                            %>
                                            <% if (hasKeywords) { %>
                                                <% Object.entries(result.keywordCounts).forEach(([keyword, count]) => { %>
                                                    <% if (count > 0) { %>
                                                        <li><%= keyword %>: <%= count %></li>
                                                    <% } %>
                                                <% }); %>
                                            <% } else { %>
                                                <li>No keyword counts available.</li>
                                            <% } %>
                                        <% } else { %>
                                            <li>No keyword counts available.</li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <% if (result.url != result.redirect && !result.error) { %>
                        <div class="card-body">
                            <p class="text-danger">Redirect: <a href="https://<%= result.redirect %>" class="link-dark link-underline-opacity-0" target="_blank"><%= result.redirect %></a></p>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% }); %>  
            </div>
        </div>
        
        

        
        <script>
            document.getElementById('urlForm').onsubmit = function() {
                // Menampilkan loader dan menyembunyikan hasil
                document.getElementById('loader').style.display = 'block';
                document.getElementById('results').innerHTML = '';
            };
        </script>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXg" crossorigin="anonymous"></script>
</html>
